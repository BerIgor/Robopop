<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="popcorp.robopop.StartupActivity"
    android:background="@drawable/stripe_pattern"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <LinearLayout
        android:id="@+id/MainLayout"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:background="@drawable/stripe_pattern"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="0dp">

    </LinearLayout>




    <Spinner
        android:id="@+id/PowerSpinner"
        android:textAlignment="center"
        android:layout_width="103dp"
        android:layout_height="38dp"
        android:layout_marginTop="174dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/MainLayout"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/MainLayout"
        app:layout_constraintTop_toTopOf="@+id/powerButton" />


    <ImageView
        android:id="@+id/spinningLight"
        android:layout_width="219dp"
        android:layout_height="202dp"
        app:srcCompat="@drawable/sunrays"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/StartButton"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="@+id/StartButton"
        app:layout_constraintTop_toTopOf="@+id/StartButton"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/StartButton"
        app:layout_constraintHorizontal_bias="0.513"
        android:layout_marginBottom="0dp"
        android:visibility="invisible"/>


    <ImageButton
        android:id="@+id/StartButton"
        android:layout_width="147dp"
        android:layout_height="87dp"
        android:background="@null"
        app:srcCompat="@drawable/start_button"
        android:scaleType="fitXY"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/powerButton"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_bias="0.535"
        app:layout_constraintHorizontal_bias="0.482"
        tools:layout_editor_absoluteY="355dp" />


    <ImageButton
        android:id="@+id/powerButton"
        android:background="@null"
        android:scaleType="fitXY"
        android:layout_width="374dp"
        android:layout_height="166dp"
        app:srcCompat="@drawable/how_powerfull"
        app:layout_constraintTop_toTopOf="@+id/MainLayout"
        android:layout_marginTop="75dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.492" />




</android.support.constraint.ConstraintLayout>
